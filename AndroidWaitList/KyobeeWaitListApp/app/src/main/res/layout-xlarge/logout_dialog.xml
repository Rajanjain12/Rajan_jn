<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/custom_dialog"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="45dp"
              android:gravity="center"
              android:orientation="vertical"
              android:background="@drawable/correct_border"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.kyobee.waitlist.customcontrol.CustomTextViewRegular
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/kyobee"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            />

        <com.kyobee.waitlist.customcontrol.CustomTextViewRegular
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:text="@string/logout"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center">

            <com.kyobee.waitlist.customcontrol.CustomButtonRegular
                android:id="@+id/btnNo"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/no"
                android:textSize="35sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"/>

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                />

            <com.kyobee.waitlist.customcontrol.CustomButtonRegular
                android:id="@+id/btnYes"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/yes"
                android:textSize="35sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
