<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/relativeRow"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        >

        <com.kyobee.waitlist.customcontrol.CustomTextViewRegular
            android:id="@+id/txtGuestId"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="#"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            >
            <com.kyobee.waitlist.customcontrol.CustomTextViewRegular
                android:id="@+id/txtGuestName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guest_name"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/imgDown"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/imgDown"
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/down"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                />


        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLightBrown"
        />

</RelativeLayout>
