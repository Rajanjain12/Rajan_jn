<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="top"
              android:orientation="horizontal"
              android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <com.kyobee.waitlist.customcontrol.CustomTextViewBold
            android:id="@+id/txtAdult"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/adult"
            android:textAllCaps="true"
            android:textColor="@color/colorRed"
            android:textSize="37sp"
            android:textStyle="bold"
            />

        <com.kyobee.waitlist.customcontrol.CustomEditTextRegular
            android:id="@+id/edt_adult"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@color/colorTransparent"
            android:gravity="center_horizontal"
            android:hint="@string/zero"
            android:textSize="45sp"
            />

        <View
            android:id="@+id/viewSeperator"
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/colorLightBrown"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <com.kyobee.waitlist.customcontrol.CustomTextViewBold
            android:id="@+id/txtChildren"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/children"
            android:textAllCaps="true"
            android:textColor="@color/colorRed"
            android:textSize="35sp"
            android:textStyle="bold"
            />

        <com.kyobee.waitlist.customcontrol.CustomEditTextRegular
            android:id="@+id/edt_children"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@color/colorTransparent"
            android:gravity="center_horizontal"
            android:hint="@string/zero"
            android:textSize="45sp"
            />

        <View
            android:id="@+id/viewSeperator1"
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/colorLightBrown"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <com.kyobee.waitlist.customcontrol.CustomTextViewBold
            android:id="@+id/txtInfant"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/infant"
            android:textAllCaps="true"
            android:textColor="@color/colorRed"
            android:textSize="37sp"
            android:textStyle="bold"
            />

        <com.kyobee.waitlist.customcontrol.CustomEditTextRegular
            android:id="@+id/edt_infants"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@color/colorTransparent"
            android:gravity="center_horizontal"
            android:hint="@string/zero"
            android:textSize="45sp"
            />

        <View
            android:id="@+id/viewSeperator3"
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/colorLightBrown"
            />

    </LinearLayout>

</LinearLayout>
